<Configuration>
	<Appenders>
		<Console name="consola" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:MM:ss} -%C [%-6p] -- %m%n">
			</PatternLayout>
		</Console>
		<File name="logsql" fileName="sql.log"></File>
	</Appenders>
	<Loggers>
		<Root level="info">
			<AppenderRef ref="consola"></AppenderRef>
		</Root>
		<Logger name="org.hibernate.SQL" level="debug">
			<AppenderRef ref="logsql"></AppenderRef>
		</Logger>
		<Logger name="org.hibernate.SQL" level="debug" additivity="false">
            <AppenderRef ref="logsql"/>
        </Logger>
        <Logger name="org.hibernate.orm.jdbc.bind" level="trace" additivity="false">
            <AppenderRef ref="logsql"/>
        </Logger>
       



	</Loggers>

</Configuration>